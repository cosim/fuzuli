(require "thread.nfl")

(let passed "PASSED!\n")
(let error "ERROR\n")


# TEST 1 
# Sleep for a second 
(print passed)
(thread_sleep 1000)
(print passed)


# TEST 2
# New Thread
(function three_times (params)
	(for (let i 0) (< i 3) (++ i)
		(print passed)
		(thread_sleep 1000)
	)
)
(let mythread1 (thread_new "three_times"))
(let mythread2 (thread_new "three_times"))
(thread_start mythread1)
(thread_start mythread2)


